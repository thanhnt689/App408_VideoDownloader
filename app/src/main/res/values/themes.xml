<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <style name="CustomAlertDialogRate" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:tag">number_button</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textColor">#A264FF</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:background">@drawable/bg_item_turnon_stroke</item>
        <item name="android:backgroundTint">#EDEDED</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="CustomAlertBottomSheet" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
    </style>

    <style name="slider_overlay">
        <!--        <item name="colorPrimary">@color/ba</item>-->
        <!--        <item name="colorOnPrimary">@color/color_pr_8</item>-->
    </style>

    <style name="customImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semi_bold</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:padding="@dimen/_16sdp"
        android:background="@drawable/bg_dialog_rate"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fontFamily="@font/sf_pro_display_semi_bold"
                android:text="@string/string_what_is_your_lucky_number"
                android:textColor="#3785FB"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_dot_selected" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/_16sdp"
            android:background="#EDEDED"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp" />

    </LinearLayout>
</LinearLayout>